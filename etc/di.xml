<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Quote\Observer\SubmitObserver">
        <plugin name="stop_sending_order_email_for_custom_payment" type="Aplazo\AplazoPayment\Plugin\Quote\Observer\SubmitObserver" sortOrder="1"/>
    </type>
    <!--Logger-->
    <type name="Aplazo\AplazoPayment\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Aplazo\AplazoPayment\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">aplazoLogger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Aplazo\AplazoPayment\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    <preference for="Aplazo\AplazoPayment\Api\OrderInterface" type="Aplazo\AplazoPayment\Model\Api\AplazoOrder"/>

    <type name="Magento\Quote\Api\ChangeQuoteControlInterface">
        <plugin name="UpdateQuoteWhenRestricted" type="Aplazo\AplazoPayment\Plugin\UpdateQuoteWhenRestrictedPlugin"/>
    </type>

    <preference for="Aplazo\AplazoPayment\Api\SaleRepositoryInterface" type="Aplazo\AplazoPayment\Model\SaleRepository"/>
    <preference for="Aplazo\AplazoPayment\Api\Data\SaleInterface" type="Aplazo\AplazoPayment\Model\Data\Sale"/>
    <preference for="Aplazo\AplazoPayment\Api\Data\SaleSearchResultsInterface" type="Magento\Framework\Api\SearchResults"/>

    <virtualType name="Aplazo\AplazoPayment\Model\ResourceModel\Sale\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">aplazo_aplazopayment_sale</argument>
            <argument name="resourceModel" xsi:type="string">Aplazo\AplazoPayment\Model\ResourceModel\Sale\Collection</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="aplazo_aplazopayment_sale_listing_data_source" xsi:type="string">Aplazo\AplazoPayment\Model\ResourceModel\Sale\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
</config>
