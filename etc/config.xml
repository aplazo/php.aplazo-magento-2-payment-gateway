<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <aplazo_gateway>
                <model>AplazoFacade</model>
                <can_authorize>0</can_authorize>
                <can_capture>0</can_capture>
                <can_void>0</can_void>
                <is_gateway>0</is_gateway>
                <title>Paga con Aplazo (en quincenas)</title>
                <allowspecific>1</allowspecific>
                <can_use_checkout>1</can_use_checkout>
                <active>1</active>
                <order_status>pending</order_status>
                <approved_order_status>processing</approved_order_status>
                <failure_order_status>canceled</failure_order_status>
                <reserve_stock>1</reserve_stock>
                <cancel_time>720</cancel_time>
                <cancel_order>1</cancel_order>
                <cancel_active>1</cancel_active>
                <cancel_message>No terminaste la orden con Aplazo. La orden se cancel√≥. Por favor, intenta nuevamente.</cancel_message>
                <enable_recover_cart>1</enable_recover_cart>
                <recover_active>1</recover_active>
                <debug_mode>1</debug_mode>
                <check_healthy_site>0</check_healthy_site>
                <magento_curl>1</magento_curl>
                <sort_order>1</sort_order>
                <sanbox_mode>0</sanbox_mode>
                <show_on_cart>1</show_on_cart>
                <show_on_product_page>1</show_on_product_page>
                <refund>1</refund>
                <rma_refund>1</rma_refund>
                <send_email>0</send_email>
            </aplazo_gateway>
        </payment>
    </default>
</config>
